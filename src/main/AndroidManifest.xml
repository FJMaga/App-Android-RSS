<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cineaficion">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_cine"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_cine"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name="com.example.cineaficion.Registro"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.example.cineaficion.RSSMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.example.cineaficion.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.cineaficion.DetalleActivity" />
        <activity android:name="com.example.cineaficion.RSSFeedActivity" />
    </application>

</manifest>